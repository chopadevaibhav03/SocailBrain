package com.social.repo;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;

import com.social.model.Content;
import com.social.model.User;

public interface ContentRepository extends JpaRepository<Content, Integer>{

	List<Content> findByUser(User user);
	
	 List<Content> findAll();
	 
    Optional<Content> findById(int id);
    
    List<Content> getConteByType(String type);
    
    List<Content> getContentByTitle(String title);
    
    List<Content> findByUser(User user);

}
